<div class="container">
    <div class="add-moi">
        <label for="add">Add Medical History: </label>
        <form action="/medical-histories" method="POST">
            <input type="text" id="medicalHistory" name="name" placeholder="Name" required>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
    <br>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Medical History list:</h3>
        </div>
        <!-- Medical History table -->
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Medical History</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 0; i < medicalHistories.length; i++) { %>
                        <tr>
                            <td><%= i + 1 %></td>
                            <td><%= medicalHistories[i].name %></td>
                            <td>
                                <button onclick="deleteMedicalHistory(`<%=medicalHistories[i]._id%>`)" class="btn btn-danger">Delete</button>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="module">
    import confirmDelete from '/js/confirmDelete.js';
    async function deleteMedicalHistory(id) {
        if(await confirmDelete('Are you sure you want to delete this Medical History?')){
            fetch(`/medical-histories/${id}/delete`, {
                method: 'DELETE'
            }).then(res => {
                if (res.ok) {
                    window.location.reload();
                }
            });
            return;
        }
        else{
            return;
        }

    }
    window.deleteMedicalHistory = deleteMedicalHistory;
</script>