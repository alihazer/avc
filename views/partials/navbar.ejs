
<nav>
    <i class='bx bx-menu toggle-sidebar'></i>
        <span class="divider"></span>
        <div class="profile">
            <div id="pro-img" class="profile-img">
            </div>
            <ul class="profile-link">
                <li><a href="/profile"><i class='bx bxs-user-circle icon'></i> Profile</a></li>
                <li><a href="/logout"><i class='bx bxs-log-out-circle'></i> Logout</a></li>
            </ul>
        </div>
</nav>
<script type="module">
    import  getUserFromCookie  from '/getUserFromCookie.js';
    const user = getUserFromCookie();
    if(!user) {
        window.location.href = '/login';
    }
    
    const profileImg = document.getElementById('pro-img');
    const profileImageUrl = user.profileImage;
    if(profileImageUrl) {
        profileImg.innerHTML = `<img src="${profileImageUrl}" id="img" alt="profile image">`;
    } else {
        profileImg.innerHTML = `<img src="https://cdn-icons-png.flaticon.com/256/6522/6522516.png" id="img" alt="profile image">`;
    }
    
</script>