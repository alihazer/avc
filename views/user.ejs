<!-- Back arrow -->
<div>
    <a href="/users" class="back-arrow1"><i class="fa-solid fa-arrow-left"></i></a>
<section class="profile-f">

    <!-- Profile card -->
    <div class="profile-card">
        
        <div class="profile-img" id="prof-img">
            
            <%if(user.profileImage == undefined){ %>
                <i class="fa-solid fa-user"></i>
            <%}else{ %>
                <img src="<%= user.profileImage %>" alt="<%= user.username %>">
            <% } %>
        </div>
        <div class="profile-info">
            <div class="profile-info-item">
                <i class="fa-solid fa-envelope"></i>
                <p class="username"><%=user.username%></p>
            </div>
            <!-- item -->
            <div class="profile-info-item">
                <i class="fa-solid fa-user"></i>
                <p class="role"><%=user.role.name%></p>
            </div>
            <!-- Phone -->
            <div class="profile-info-item">
                <i class="fa-solid fa-phone"></i>
                <p class="phone"><%=user.phone%></p>
            </div>
            <!-- Shift Days -->
            <div class="profile-info-item">
                <i class="fa-solid fa-calendar"></i>
                <p class="shiftDays"><%=user.shiftDays.join(',')%></p>
            </div>
            <!-- Blood type -->
            
            <div class="profile-info-item">
                    <i class="fa-solid fa-heart"></i>
                    <p class="bloodType"><%=user.bloodType%></p>
            </div>

            <div class="profile-info-item">
                <i class="fa-solid fa-id-card"></i>
                <p class="bloodType"><%=totalCases%> cases</p>
        </div>
        </div>
        
    </div>
</section>
</div>