<div class="container">
            <div class="profile-card">
                <br>
                <div class="profile-img">
                    <% if(user.profileImage) { %>
                        <img src="<%=user.profileImage%>"/>
                    <% } else { %>
                        <i class="fa-solid fa-user"></i>
                    <% } %>
                    <!-- add image btn -->
                </div>
                <!-- Alert error -->
                
                <div class="profile-info">
                    <div class="alert" id="alert" style="display: none;">
                        <div><span class="close-btn" id="closeBtn">&times;</span></div>
                        <div><p id="alertMessage"></p></div>
                    </div>
                    <p>Upload Profile:</p>
                <form class="profile-f">
                    <div class="profile-info-item">
                        
                        <input type="file" name="profileImage" id="profileImage">
                    </div>
                    <div class="profile-info-item">
                        <i class="fa-solid fa-envelope"></i>
                        <p><%= user.username %></p>
                    </div>
                    <!-- item -->
                    <div class="profile-info-item">
                        <i class="fa-solid fa-user"></i>
                        <p><%= role %></p>
                    </div>
                    <!-- Phone -->
                    <div class="profile-info-item">
                        <i class="fa-solid fa-phone"></i>
                        <input type="text" name="phone" id="phone" value="<%= user.phone %>">
                    </div>
                    <!-- Blood type -->
                        <div class="profile-info-item">
                            <i class="fa-solid fa-heart"></i>
                            <!-- Select blood type -->
                            <select name="bloodType" id="bloodType">
                                <% if(user.bloodType) { %>
                                    <option value="<%= user.bloodType %>" selected><%= user.bloodType %></option>
                                <% } %>
                                <option value="A+">A+</option>
                                <option value="A-">A-</option>
                                <option value="B+">B+</option>
                                <option value="B-">B-</option>
                                <option value="AB+">AB+</option>
                                <option value="AB-">AB-</option>
                                <option value="O+">O+</option>
                                <option value="O-">O-</option>
                            </select>
                        </div>

                        <!-- DOB -->
                        <div class="profile-info-item">
                            <i class="fa-solid fa-calendar-days"></i>
                            <input type="date" name="dob" id="dob" value="<%= user.dob %>">
                        </div>

                        <!-- Badle size -->
                            <div class="profile-info-item">
                                <i  class="fa-solid fa-person"></i>
                                <%const sizes1 = ['s', 'm', 'l', 'xl', 'xxl', 'xxxl']; %>
                                
                                <!-- if selected  -->
                                <select name="badleSize" id="badleSize">
                                    <!-- selected if already choosen -->
                                    <% sizes1.forEach(size => { %>
                                        <option value="<%= size %>" <%= user.badleSize == size ? 'selected' : '' %>><%= size %></option>
                                    <% }) %>
                                </select>
                            </div> 
                            
                            <!-- Kanze size -->
                            <div style="margin-top: 7px;" class="profile-info-item">
                                <i class="fa-solid fa-shirt"></i>
                                <!-- Select blood type -->
                                <select name="kanzeSize" id="kanzeSize">                                    <!-- selected if already choosen -->
                                    <% sizes1.forEach(size => { %>
                                        <option value="<%= size %>" <%= user.kanzeSize == size ? 'selected' : '' %>><%= size %></option>
                                    <% }) %>
            
                                </select>
                            </div>

                            <!-- Ranger size -->
                            <div style="margin-top: 7px;" class="profile-info-item">
                                <i class="fa-solid fa-shoe-prints"></i>                                <!-- Select blood type -->
                                <select name="rangerSize" id="rangerSize">
                                    <% const sizes = [38, 39, 40, 41, 42, 43, 44, 45, 46]; %>
                                    <!-- selected if already choosen -->
                                    <% sizes.forEach(size => { %>
                                        <option value="<%= size %>" <%= user.rangerSize == size ? 'selected' : '' %>><%= size %></option>
                                    <% }) %>
                                </select>
                            </div>
                
                
                <input style="display: none;" id="image" name="profileImage">
                <!-- edit profile btn -->
                <br>
                <div>
                    <!-- back -->
                    <button class="primary-btn"><a style="color: white;" href="/profile">Back</a></button>
                    <button type="submit" class="primary-btn">Save</button>
                </div>

            </form>
                <!-- Hidden input -->
                
                </div>
            </div>

</div>
<script type="module" src="/firebase/firebaseConfig.js"></script>
<script type="module" src="/firebase/imageUpload.js"></script>
<script type="module" src="/firebase/formSubmission.js"></script>
