<div class="container">
    <div class="card triage" style="padding: 20px;">
        <h1>Triage</h1>
        <br>
        <br>
        <form id="triageForm"  action="/triage/emergency?car=<%=car%>" method="POST" class="triageForm">
            <%-include('partials/commun/mainFields', {type: 'emergency'}) %>
            <%-include('partials/commun/avpu') %>
            <%-include('partials/commun/moi') %>
            <div class="triage-form-group">
                <label for="chiefComplaint">DCAP_BTLS??</label>
                <select name="isTrauma" id="isTrauma">
                    <option value="true">Yes</option>
                    <option selected value="false">No</option>
                </select>
            </div>
                <div class="dcap-btls" id="dcap-btls" style="display: none;">
                    <div class="dcap-btls-letter">
                        <input type="checkbox" id="d" name="dcap-btls" value="D">
                        <label for="d">Deformation - تغيرالشكل </label>
                    </div>
                    <div class="dcap-btls-letter">
                        <input type="checkbox" id="c" name="dcap-btls" value="C">
                        <label for="c">Contusion - ورم</label>
                    </div>
                    <div class="dcap-btls-letter">
                        <input type="checkbox" id="a" name="dcap-btls" value="A">
                        <label for="a">Abration جلف</label>
                    </div>
                    <div class="dcap-btls-letter">
                        <input type="checkbox" id="p" name="dcap-btls" value="P">
                        <label for="p">Pentration - ثقب</label>
                    </div>
                    <div class="dcap-btls-letter">
                        <input type="checkbox" id="b" name="dcap-btls" value="B">
                        <label for="b">Burn - حرق</label>
                    </div>
                    <div class="dcap-btls-letter">
                        <input type="checkbox" id="t" name="dcap-btls" value="T">
                        <label for="t">Tendreness</label>
                    </div>
                    <div class="dcap-btls-letter">
                        <input type="checkbox" id="l" name="dcap-btls" value="L">
                        <label for="l">Laceration - جرح</label>
                    </div>
                    <div class="dcap-btls-letter">
                        <input type="checkbox" id="s" name="dcap-btls" value="S">
                        <label for="s">Swelling - احتقان </label>
                    </div>
                </div>
            <%-include('partials/commun/vitals') %>
            <%-include('partials/commun/histories') %>
            <%-include('partials/commun/allergies') %>
            <div class="triage-form-group">
                <label for="triageLevel">Triage Level</label>
                <select name="triageLevel" id="triageLevel" required>
                    <option value="" disabled selected>Choose Triage Level</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3+">3+</option>
                    <option value="3">3</option>
                    <option value="4+">4+</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>

            <%-include('partials/commun/usage') %>
            <%-include('partials/commun/footer') %>
            <input type="hidden" name="dcap_btls" id="dcap_btls">
        </form>
    </div>
    

</div>
<script src="/js/usage.js"></script>
<script src="/js/toggleOtherInput.js"></script>
<script src="/js/dcap_btls.js"></script>