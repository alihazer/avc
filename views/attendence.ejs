<form method="GET" action="/attendence/all">
    <label for="shiftDay">Filter by Shift Day:</label>
    <select name="shiftDay" id="shiftDay">
        <option value="">All</option>
        <option value="monday" <%= shiftDayFilter === 'monday' ? 'selected' : '' %>>Monday</option>
        <option value="tuesday" <%= shiftDayFilter === 'tuesday' ? 'selected' : '' %>>Tuesday</option>
        <option value="wednesday" <%= shiftDayFilter === 'wednesday' ? 'selected' : '' %>>Wednesday</option>
        <option value="thursday" <%= shiftDayFilter === 'thursday' ? 'selected' : '' %>>Thursday</option>
        <option value="friday" <%= shiftDayFilter === 'friday' ? 'selected' : '' %>>Friday</option>
        <option value="saturday" <%= shiftDayFilter === 'saturday' ? 'selected' : '' %>>Saturday</option>
        <option value="sunday" <%= shiftDayFilter === 'sunday' ? 'selected' : '' %>>Sunday</option>
    </select>
    <button type="submit">Filter</button>
</form>

<h2>Attendance List</h2>

<table>
    <thead>
        <tr>
            <th>Shift Day</th>
            <th>Date</th>
            <th>Attended Users</th>
        </tr>
    </thead>
    <tbody>
        <% if (attendenceList.length > 0) { %>
            <% attendenceList.forEach((attendance) => { %>
                <tr>
                    <td><%= attendance.shiftDay %></td>
                    <td><%= attendance.date.toDateString() %></td>
                    <td>
                        <% attendance.attendedUsers.forEach((entry) => { %>
                            <p><%= entry.user.username %> - Arrival Time: <%= entry.arrivalTime %></p>
                        <% }) %>
                    </td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="3">No attendance records found for the selected shift day.</td>
            </tr>
        <% } %>
    </tbody>
</table>
